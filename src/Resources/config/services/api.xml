<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="bitbag.byrd_shipping_export_plugin.api.byrd_http_client" class="BitBag\SyliusByrdShippingExportPlugin\Api\Client\ByrdHttpClient">
            <argument type="service" id="http_client" />
            <argument type="service" id="bitbag.byrd_shipping_export_plugin.repository.byrd_product_mapping" />
            <argument type="service" id="bitbag.byrd_shipping_export_plugin.api.byrd_model_factory" />
            <argument type="string">%env(BYRD_API_URL)%</argument>
        </service>

        <service id="bitbag.byrd_shipping_export_plugin.api.byrd_model_factory" class="BitBag\SyliusByrdShippingExportPlugin\Api\Factory\ByrdModelFactory" />
    </services>
</container>
