<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="bitbag.byrd_shipping_export_plugin.form.type.byrd_shipping_gateway" class="BitBag\SyliusByrdShippingExportPlugin\Form\Type\ShippingGatewayType">
            <tag name="bitbag.shipping_gateway_configuration_type" type="byrd" label="Byrd" />
        </service>

        <service id="bitbag.byrd_shipping_export_plugin.event_listener.byrd_shipping_export" class="BitBag\SyliusByrdShippingExportPlugin\EventListener\ShippingExportEventListener">
            <argument type="service" id="bitbag.byrd_shipping_export_plugin.byrd_http_client" />

            <tag name="kernel.event_listener" event="bitbag.export_shipment" method="exportShipment" />
        </service>

        <service id="bitbag.byrd_shipping_export_plugin.byrd_http_client" class="BitBag\SyliusByrdShippingExportPlugin\Api\Client\ByrdHttpClient">
            <argument type="service" id="http_client" />
            <argument type="string">%env(BYRD_API_URL)%</argument>
        </service>
    </services>
</container>
